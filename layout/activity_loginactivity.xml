<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginactivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/login_photo"

                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_image"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:drawableStart="@drawable/email"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"


                android:drawableLeft="@drawable/email" />
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_image"
                android:hint="Password..."
                android:inputType="textPassword"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:drawableStart="@drawable/password"
                android:layout_marginTop="90dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/email" />
            <TextView
                android:id="@+id/forgot_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_button"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="                  Forgot Password?"
                android:textAllCaps="false"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/holo_green_dark"


                />
            <TextView
                android:id="@+id/need_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_link"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="                   Need a account?"
                android:textAllCaps="false"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/holo_green_dark"


                />
            <TextView
                android:id="@+id/login_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/need_new_account"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="                    Login using ..."
                android:textAllCaps="false"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/holo_green_dark"

                />
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_password"
                android:layout_marginTop="20dp"
                android:layout_marginRight="150dp"
                android:layout_marginLeft="150dp"
                android:text="LOG IN"
                android:padding="4dp"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textColor="@android:color/holo_green_light"
                android:background="@android:color/holo_green_dark"
                />
            <Button
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_with"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/holo_green_dark"
                android:drawableStart="@drawable/phone"
                android:drawableLeft="@drawable/phone" />
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>